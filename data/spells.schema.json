{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Spells",
    "description": "Spell data specification",
    "type": "object",
    "definitions": {
        "targetType": {
            "type": "string",
            "enum": [
                "all-enemies",
                "all-melee-enemies",
                "closest-enemy",
                "closest-enemy-cone",
                "farthest-enemy",
                "all-allies",
                "all-other-allies",
                "all-adjacent-allies",
                "adjacent-ally",
                "self"
            ]
        },
        "damageEffect": {
            "properties": {
                "type": {
                    "const": "damage"
                },
                "amount": {
                    "type": "number"
                },
                "targets": {
                    "$ref": "#/definitions/targetType"
                }
            },
            "required": [ "type", "amount" ],
            "additionalProperties": false
        },
        "healEffect": {
            "properties": {
                "type": {
                    "const": "heal"
                },
                "amount": {
                    "type": "number"
                }
            },
            "targets": {
                "$ref": "#/definitions/targetType"
            },
            "required": [ "type", "amount" ],
            "additionalProperties": false
        },
        "auraEffect": {
            "properties": {
                "type": {
                    "const": "aura"
                },
                "duration": {
                    "type": "number"
                },
                "attackFactor": {
                    "type": "number"
                },
                "helpful": {
                    "type": "boolean"
                },
                "attackBonusAmount": {
                    "type": "number"
                },
                "damageTakenBonusAmount": {
                    "type": "number"
                }
            },
            "targets": {
                "$ref": "#/definitions/targetType"
            },
            "required": [ "type", "duration" ],
            "additionalProperties": false
        },
        "dotEffect": {
            "properties": {
                "type": {
                    "const": "dot"
                },
                "duration": {
                    "type": "number"
                },
                "amount": {
                    "type": "number"
                },
                "period": {
                    "type": "number"
                },
                "delay": {
                    "type": "number"
                }
            },
            "targets": {
                "$ref": "#/definitions/targetType"
            },
            "required": [ "duration", "amount" ],
            "additionalProperties": false
        },
        "effect": {
            "anyOf": [
                { "$ref": "#/definitions/damageEffect" },
                { "$ref": "#/definitions/healEffect" },
                { "$ref": "#/definitions/auraEffect" },
                { "$ref": "#/definitions/dotEffect" }
            ]
        },
        "spell": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "cooldown": {
                    "type": "number"
                },
                "targets": {
                    "$ref": "#/definitions/targetType"
                },
                "effects": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/effect"
                    },
                    "minItems": 1
                },
                "delay": {
                    "type": "number"
                }
            },
            "required": [ "name", "cooldown", "targets", "effects" ],
            "additionalProperties": false
        }
    },
    "properties": {
        "$schema": {
            "type": "string"
        },
        "/": {}
    },
    "patternProperties": {
        "\\d+": {
            "$ref": "#/definitions/spell"
        }
    },
    "additionalProperties": false
}