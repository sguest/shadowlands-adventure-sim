{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Companions",
    "description": "Companion data specification",
    "type": "object",
    "definitions": {
        "companion": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "covenant": {
                    "type": "string",
                    "enum": [ "Kyrian", "Necrolord", "Night Fae", "Venthyr", "Neutral" ]
                },
                "melee": {
                    "type": "boolean"
                },
                "spells": {
                    "type": "array",
                    "items": { 
                        "type": "number"
                    },
                    "minItems": 1
                }
            },
            "additionalProperties": false,
            "required": [ "name", "covenant", "melee", "spells" ]
        }
    },
    "properties": {
        "companions": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/companion"
            }
        },
        "$schema": {
            "type": "string"
        }
    },
    "additionalProperties": false
}