{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Troops",
    "description": "Troop data specification",
    "type": "object",
    "definitions": {
        "troop": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "covenant": {
                    "type": "string",
                    "enum": [ "Kyrian", "Necrolord", "Night Fae", "Venthyr" ]
                },
                "melee": {
                    "type": "boolean"
                },
                "spells": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    },
                    "minItems": 1
                }
            },
            "required": [ "name", "covenant", "melee", "spells" ],
            "additionalProperties": false
        }
    },
    "properties": {
        "troops": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/troop"
            }
        },
        "$schema": {
            "type": "string"
        }
    },
    "additionalProperties": false
}